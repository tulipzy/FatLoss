.container {
  padding: 16rpx;
  background-color: #f5f5f5;
}

.search-bar {
  margin-bottom: 16rpx;
}

.search-input {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.no-record {
  text-align: center;
  padding: 150rpx 0;
  color: #999;
  font-size: 28rpx;
}

.record-card {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.date {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.day-total {
  font-size: 28rpx;
  color: #666;
}

.diet-items {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.diet-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 12rpx 0;
  border-bottom: 1px solid #eee;
}

.diet-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.dish-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.calorie {
  font-size: 24rpx;
  color: #999;
}

.type {
  font-size: 24rpx;
  color: #999;
}

.time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}