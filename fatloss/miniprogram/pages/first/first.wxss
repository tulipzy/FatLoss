.ai-slimming-section {
  padding: 30rpx 20rpx;
  background: #FFFFFF;
  margin: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding-left: 10rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: #ff6b81;
  border-radius: 3rpx;
}

.slimming-card {
  background: linear-gradient(135deg, #f9f0ff, #e6f7ff);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.slimming-intro {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.slimming-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.intro-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.slimming-btn {
  background: linear-gradient(90deg, #ff6b81, #ff9a9e);
  color: white;
  border-radius: 50rpx;
  padding: 0 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 20rpx rgba(255,107,129,0.4);
}

/* 模态框样式 */
.modal-container, .result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-show {
  opacity: 1;
  visibility: visible;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content, .result-content {
  background: white;
  border-radius: 24rpx;
  width: 85%;
  max-height: 80%;
  overflow: hidden;
  z-index: 1000;
  position: relative;
  transform: translateY(50rpx);
  transition: transform 0.3s ease;
}

.modal-show .modal-content, .modal-show .result-content {
  transform: translateY(0);
}

.modal-header, .result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title, .result-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.modal-close, .result-close {
  font-size: 40rpx;
  color: #999;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.upload-area {
  height: 300rpx;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  background: #fafafa;
}

.upload-area.has-image {
  border: none;
  padding: 0;
  height: auto;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #999;
}

.preview-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
}

.input-group, .option-group {
  margin-bottom: 30rpx;
}

.input-label, .option-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.prompt-input {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.picker {
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.modal-footer {
  display: flex;
  padding: 0 30rpx 30rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin: 0 10rpx;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: linear-gradient(90deg, #ff6b81, #ff9a9e);
  color: white;
}

.btn-confirm:disabled {
  background: #ccc;
}

/* 结果模态框样式 */
.result-body {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.result-actions {
  display: flex;
  width: 100%;
}

.btn-download, .btn-share {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin: 0 10rpx;
}

.btn-download {
  background: #ff6b81;
  color: white;
}

.btn-share {
  background: #4CAF50;
  color: white;
}

