/* 全局样式 */
page {
  background-color: #f8f8f8;
  padding-bottom: 100rpx;
}

/* 顶部横幅 */
.full-top-banner {
  width: 100%;
  height: 250rpx;
  position: relative;
  overflow: hidden;
}

.full-banner-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  object-fit: cover;
}

.full-banner-content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.full-banner-title {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.full-banner-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 圆弧分割线 */
.arc-divider {
  width: 110%;
  height: 60rpx;
  background: #fff;
  border-radius: 50% 50% 0 0 / 100% 100% 0 0;
  margin-top: -40rpx;
  margin-left: -5%;
  position: relative;
  z-index: 2;
}

/* 今日推荐区域 */
.today-recommend {
  padding: 5rpx 20rpx;
  background: #fff;
  position: relative;
  z-index: 3;
  margin-top: -20rpx;
}

.recommend-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding-left: 10rpx;
}

.recommend-scroll {
  display: flex;
  width: 100%;
  padding-bottom: 10rpx;
}

/* 特色卡片样式 */
.feature-card {
  width: 700rpx;
  height: 250rpx;
  margin-right: 20rpx;
  border-radius: 24rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  flex-shrink: 0;
}

.feature-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  object-fit: cover;
}

.feature-tag {
  position: absolute;
  top: 10rpx;
  right: 560rpx;
  background: rgba(230, 190, 103, 0.932);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: rgb(255, 255, 255);
  font-weight: bold;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.feature-tag1 {
  position: absolute;
  top: 20rpx;
  right: 560rpx;
  background: rgba(113, 212, 138, 0.85);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: rgb(255, 255, 255);
  font-weight: bold;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.feature-tag2 {
  position: absolute;
  top: 20rpx;
  right: 560rpx;
  background: rgba(241, 138, 78, 0.85);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: rgb(255, 255, 255);
  font-weight: bold;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.feature-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255,255,255,0.8);
  padding: 24rpx;
  border-radius: 0 0 27rpx 27rpx;
}

.feature-name {
  font-size: 27rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  display: block;
}

/* 普通卡片样式 */
.recommend-card {
  width: 260rpx;
  height: 280rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  flex-shrink: 0;
  padding: 20rpx;
}

.card-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}

.card-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  text-align: center;
}

.card-desc {
  font-size: 24rpx;
  color: #999;
}

/* 底部导航 */
.tab-bar {
  display: flex;
  height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tab-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 6rpx;
}

.tab-text {
  font-size: 22rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: #ff6b81;
  font-weight: bold;
}

/* 新增我的数据区域样式 */
.data-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.data-cards {
  display: flex;
  justify-content: space-between;
}

.data-card {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.data-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.data-icon image {
  width: 100%;
  height: 100%;
}

.data-content {
  display: flex;
  flex-direction: column;
}

.data-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.data-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
