  <view class="data-cards">
    <!-- 打卡进度 -->
    <view class="data-card">
     
      <view class="data-content">
        <text class="data-label">打卡进度</text>
        <text class="data-value"></text>
      </view>
    </view>
    
    <!-- 今日摄入 -->
    <view class="data-card">
     
      <view class="data-content">
        <text class="data-label">今日热量摄入</text>
