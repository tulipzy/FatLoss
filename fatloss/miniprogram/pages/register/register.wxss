/* pages/register/register.wxss */
/* 页面基础样式 */
page {
  height: 100%;
  background-color: #f5f5f5;
}

.scrollarea {
  height: 100%;
  position: relative;
}

/* 背景图样式 */
.bg-image {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 居中容器 */
.center-wrapper {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 表单容器 */
.form-container {
  width: 100%;
  max-width: 600rpx;
  background-color: rgba(212, 22, 22, 0);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0);
}

/* 表单标题 */
.form-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #07c160;
  text-align: center;
  margin-bottom: 50rpx;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 40rpx;
  position: relative;
}

.form-label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.form-input {
  flex: 1;
  height: 90rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 32rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #07c160;
}

/* 检查中指示器 */
.checking-indicator {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 24rpx;
}

/* 密码显示/隐藏按钮 */
.toggle-password {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #07c160;
  font-size: 28rpx;
  padding: 8rpx 16rpx;
  background: rgba(7, 193, 96, 0.1);
  border-radius: 8rpx;
}

/* 错误信息样式 */
.error-message {
  color: #ff4d4f;
  font-size: 26rpx;
  margin-top: 10rpx;
  display: block;
  min-height: 36rpx;
}

/* 按钮样式 */
.primary-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #07c160;
  color: white;
  border-radius: 45rpx;
  font-size: 34rpx;
  margin-top: 60rpx;
}

.primary-btn:active {
  background: #06ae56;
}

.primary-btn[disabled] {
  background: #bae7ff;
  color: rgba(0, 0, 0, 0.3);
}

/* 登录链接 */
.login-link {
  text-align: center;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #666;
}

.link-text {
  color: #07c160;
  margin-left: 10rpx;
  font-weight: 500;
}