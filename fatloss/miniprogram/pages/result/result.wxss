/* 页面整体容器 */
.result-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(to bottom, #e6f7ff, #fff0f6); 
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 图片容器 */
.image-wrapper {
  width: 90%;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.result-image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}

/* 食物名称标题 */
.food-name-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 详细信息卡片 */
.detail-card {
  width: 90%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 32rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  width: 160rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.intro-item {
  flex-direction: column;
  align-items: flex-start;
}

.intro-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 操作按钮组 */
.button-group {
  width: 90%;
  display: flex;
  justify-content: space-between;
}

.edit-button {
  background-color: #fff;
  color: #333;
  border: 1px solid #ddd;
  border-radius: 32rpx;
  padding: 16rpx 0;
  font-size: 26rpx;
  width: 45%;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.record-button {
  background-color: #b3e5fc;
  color: #333;
  border-radius: 32rpx;
  padding: 16rpx 0;
  font-size: 26rpx;
  width: 45%;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 编辑数据弹窗样式 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.edit-modal-content {
  width: 85%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-sizing: border-box;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.edit-modal-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 24rpx;
}

.modal-image-wrapper {
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.edit-modal-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.edit-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
}

.edit-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.required {
  color: #ff4d4f;
}

.edit-input {
  height: 72rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 26rpx;
}

.edit-button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 32rpx;
}

.edit-cancel {
  background-color: #f5f5f5;
  color: #333;
  border-radius: 8rpx;
  padding: 12rpx 0;
  font-size: 26rpx;
  width: 45%;
  text-align: center;
}

.edit-confirm {
  background-color: #b3e5fc;
  color: #333;
  border-radius: 8rpx;
  padding: 12rpx 0;
  font-size: 26rpx;
  width: 45%;
  text-align: center;
}