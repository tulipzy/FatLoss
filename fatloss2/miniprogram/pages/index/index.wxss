page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgba(170, 170, 170, 0.548);
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 140rpx;
  margin: 30rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 80px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1; 
}
.scrollarea {
  position: relative; 
}

.login-btn {
  margin-top: 40px;
  width: 80%;
  background-color: #cccccc;
  color: #666666;
  border: none;
  border-radius: 8px;
  padding: 12px 0;
  font-size: 16px;
}

.login-btn:not([disabled]) {
  background-color: #07c160;
  color: white;
}