/* 页面基础样式 */
.container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(to bottom, #c2f1ff, #fcdbe6); 
  padding: 16px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 搜索框样式 */
.search-box {
  position: absolute;
  top: 16px;
  right: 40px; 
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  height: 30px;
  border-radius: 18px;
  padding: 0 15px;
  width: 70%; 
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}
.search-box input {
  flex: 1;
  font-size: 14px;
}
.placeholder-style {
  color: #999;
}

/* 相机区域样式 */
.camera-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60px; 
  padding: 20px;
  border-radius: 8px;
  transition: background-color 0.3s ease;
}
.camera-container:active {
  background-color: rgba(255, 255, 255, 0.2);
}
.camera-image {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  background: linear-gradient(135deg, #a8d8ff, #f7c9d9);
  padding: 0px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}
.camera-text {
  margin-top: 10px;
  font-size: 14px;
  color: #666;
}

/* 新增：按钮组样式（调整间距和宽度） */
.btn-group {
  display: flex;
  gap: 10px; /* 减小按钮之间的间隔 */
  margin-top: -120px; /* 缩短与相机区域的距离 */
}
.custom-btn {
  padding: 10px 20px; /* 加长按钮宽度 */
  background-color: rgb(225, 248, 245);
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  font-size: 14px;
  color: #333;
  cursor: pointer;
  transition: background-color 0.3s ease;
  /* 让按钮宽度更均匀，可根据需求调整 */
  min-width: 100px; 
  text-align: center;
}
.custom-btn:active {
  background-color: #f5f5f5;
}

/* 进度卡片样式 */
.progress-card {
  width: 90%;
  background-color: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  padding: 12px;
  margin-top: 30px;
}

/* 进度模块布局 */
.progress-module {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}

/* 项目项样式 */
.progress-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.icon {
  width: 30px;
  height: 40px;
  margin-bottom: 5px;
}
.title {
  font-size: 16px;
  color: #333;
  margin-bottom: 8px;
}
.value {
  font-size: 20px;
  color: #333;
  font-weight: bold;
}

/* 双环进度条核心样式（调整布局和文字排版） */
.progress-circle-wrap {
  width: 150px;
  height: 150px; /* 改为正方形，让圆环更规整 */
  display: flex;
  justify-content: flex-start; /* 让进度条整体往左靠 */
  align-items: center;
}

/* 外环（底色环） */
.outer-circle {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #f5f5f5; /* 外环底色 */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 进度环（夹缝区域，关键！） */
.progress-ring {
  width: 88%; /* 比外环小，形成夹缝 */
  height: 88%; 
  border-radius: 50%;
  background: conic-gradient(#b3e5fc var(--progress-ratio), transparent 0);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 内环（中心内容容器） */
.inner-circle {
  width: 70%; /* 比进度环小，露出夹缝进度 */
  height: 70%; 
  border-radius: 50%;
  background-color: #fff; /* 中心白色背景 */
  display: flex;
  flex-direction: column; /* 改为垂直排列文字 */
  justify-content: center;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 中心文字样式（调整排版，数字单独一行） */
.circle-text {
  text-align: center;
  color: #333;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 数字单独占一行，突出显示 */
.remain-value {
  font-size: 24px; 
  font-weight: bold;
  margin-bottom: 8px; /* 与上下文字拉开距离 */
  line-height: 1; 
  color: rgb(155, 234, 245);
}
.remain-title {
  font-size: 14px; 
  margin-bottom: 4px;
  line-height: 1;
}
.recommend {
  font-size: 12px; /* 补充字号，原代码可能漏了数值 */
  color: #999;
  line-height: 1;
}

/* 左右项目项文字排版（让数字单独一行，其余文字分布） */
.progress-item .text-group {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.progress-item .title {
  font-size: 16px;
  margin-bottom: 8px;
}
.progress-item .value {
  font-size: 20px;
  font-weight: bold; 
  line-height: 1;
  /* 数字单独一行，若有需要可调整 margin 等 */
}