.result-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(to bottom, #c2f1ff, #fcdbe6); 
  padding: 20px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-image {
  width: 90%; 
  border-radius: 20px;
  margin-bottom: 30px;
}

.result-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.result-desc {
  font-size: 16px;
  color: #666;
  margin-bottom: 8px;
}

.nutrition {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 20px;
}

.nutrition-item {
  font-size: 15px;
  color: #666;
  margin-bottom: 4px;
}

.button-group {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.edit-button {
  background-color: #fff;
  color: #333;
  border: 1px solid #ccc;
  border-radius: 20px;
  padding: 10px 30px; 
  font-size: 15px;
  width: 40%; 
}

.record-button {
  background-color: #b3e5fc;
  color: #333;
  border-radius: 20px;
  padding: 10px 30px; 
  font-size: 15px;
  width: 40%; 
}

/* 编辑数据弹窗样式 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.edit-modal-content {
  width: 80%;
  background-color: #fff;
  border-radius: 10px;
  padding: 20px;
  box-sizing: border-box;
}

.edit-modal-title {
  font-size: 17px;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 15px;
}

.edit-modal-image {
  width: 100%;
  border-radius: 10px;
  margin-bottom: 15px;
}

.edit-item {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.edit-label {
  width: 60px;
  font-size: 15px;
  color: #333;
}

.edit-input {
  flex: 1;
  height: 35px;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 0 10px;
  font-size: 14px;
}

.edit-button-group {
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
}

.edit-cancel {
  background-color: #f5f5f5;
  color: #333;
  border-radius: 8px;
  padding: 8px 20px;
  font-size: 14px;
}

.edit-confirm {
  background-color: #b3e5fc;
  color: #333;
  border-radius: 8px;
  padding: 8px 20px;
  font-size: 14px;
}