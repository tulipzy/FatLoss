.personal-info-container {
  padding: 30rpx;
  background-color: #fff;
}
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.change-avatar {
  color: #ff9900;
  font-size: 28rpx;
}
.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}
.item-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.item-input, .picker-view {
  border: 1px solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.save-btn {
  width: 100%;
  background-color: #8bc34a;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
}