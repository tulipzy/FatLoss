/* 核心修改：页面背景渐变效果 */
page {
  /* 淡蓝色线性渐变（从左上到右下） */
  background: linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 100%);
  min-height: 100vh; /* 确保背景铺满整个屏幕高度 */
  margin: 0;
  padding: 0;
}

/* 训练模式选择模块 */
.training-mode-container {
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  padding: 32rpx;
  margin: 30rpx;
}

.mode-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  display: block;
}

.mode-options {
  display: flex;
  justify-content: space-between;
}

/* 训练模式选择模块样式增强 */
.mode-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  margin: 0 10rpx;
  border-radius: 16rpx;
  background-color: #F5F5F5;
  transition: all 0.3s ease;
}

.mode-item.active {
  background-color: var(--primary-color, #1E90FF);
  transform: translateY(-5rpx);
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.1);
}

.mode-item.active::after {
  content: '';
  display: block;
  height: 6rpx;
  width: 80%;
  margin: 8rpx auto 0;
  background-color: #FFFFFF;
  border-radius: 3rpx;
}

/* 内容区过渡动画 */
.content-container {
  transition: background-color 0.4s linear;
  padding: 30rpx;
  min-height: 100vh;
}

/* 模式专属内容样式 */
.mode-specific-content {
  width: 100%;
  margin-top: 30rpx;
}

/* 居家模式特色卡片网格 */
.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.feature-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.feature-card-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
}

