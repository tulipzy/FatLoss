<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input 
      class="search-input" 
      placeholder="搜索日期/食物名称" 
      bindinput="onSearch" 
      value="{{searchKeyword}}"
    />
  </view>

  <!-- 饮食记录列表 -->
  <view class="record-list">
    <block wx:for="{{historyDietList}}" wx:key="date">
      <view class="record-card">
        <!-- 日期和总热量 -->
        <view class="card-header">
          <text class="date">{{item.date}}</text>
          <text class="day-total">当日总热量：{{item.totalCalorie}} 千卡</text>
        </view>

        <!-- 具体食物记录 -->
        <view class="diet-items">
          <view 
            class="diet-item" 
            wx:for="{{item.records}}" 
            wx:key="time" 
            wx:for-item="diet"
          >
            <view class="item-left">
              <text class="dish-name">{{diet.dishName}}</text>
              <text class="calorie">热量：{{diet.calorie}} 千卡</text>
            </view>
            <text class="time">{{diet.time}}</text>
          </view>
        </view>
      </view>
    </block>
  </view>
</view>