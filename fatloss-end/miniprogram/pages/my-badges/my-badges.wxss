/* pages/badges/badges.wxss */
.badges-container {
  padding: 20rpx 30rpx;
  background: #fff;
  min-height: 100vh;
}

.header {
  margin: 20rpx 0 30rpx;
}
.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.sub-desc {
  font-size: 22rpx;
  color: #999;
  line-height: 32rpx;
}

/* 已获得勋章：固定高度布局 */
.scroll-container {
  margin: 10rpx 0 30rpx;
}
.badges-scroll {
  white-space: nowrap;
  padding: 10rpx 0;
}
.badge-item {
  width: 180rpx; /* 适当加宽容器，避免文字溢出 */
  height: 200rpx; /* 加高容器，适配更大的图片 */
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 25rpx; /* 增加右侧间距 */
  vertical-align: top;
}
.badge-image {
  width: 110rpx; /* 图片宽度从80rpx放大到110rpx */
  height: 110rpx; /* 图片高度从80rpx放大到110rpx */
  margin-bottom: 12rpx; /* 图片与文字间距略微增加 */
}
.badge-text-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 80rpx; /* 文字区域高度适配 */
}
.badge-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  margin-bottom: 6rpx;
  line-height: 1.3;
}
.badge-desc {
  font-size: 20rpx;
  color: #666;
  text-align: center;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 待解锁勋章：同样固定高度 */
.unlocked-section {
  margin: 30rpx 0;
}
.unlocked-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}
.unlocked-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
/* 待解锁勋章：同步放大图片 */
.unlocked-item {
  width: 180rpx; /* 与已解锁勋章容器宽度一致 */
  height: 200rpx; /* 与已解锁勋章容器高度一致 */
  display: flex;
  flex-direction: column;
  align-items: center;
}
.locked-image {
  width: 110rpx; /* 同步放大到110rpx */
  height: 110rpx; /* 同步放大到110rpx */
  margin-bottom: 12rpx; /* 保持与已解锁勋章一致的间距 */
  opacity: 0.6;
  filter: grayscale(80%);
}
.locked-name {
  color: #666;
}
.locked-desc {
  color: #999;
  font-size: 20rpx;
  text-align: center;
  line-height: 1.3;
}

/* 任务进度保持不变 */
.task-card {
  background: #f9f9f9;
  padding: 25rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
}
.task-item {
  margin-bottom: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1px solid #eee;
}
.task-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}
.task-title {
  font-size: 26rpx;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}
.progress-wrap {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.progress-text {
  font-size: 22rpx;
  color: #666;
  line-height: 32rpx;
}
.unlock-tip {
  font-size: 20rpx;
  color: #999;
}
.progress-bar {
  height: 12rpx;
  background: #eee;
  border-radius: 6rpx;
  overflow: hidden;
}
.progress {
  height: 100%;
  background: #ff9900;
  transition: width 0.3s ease;
}