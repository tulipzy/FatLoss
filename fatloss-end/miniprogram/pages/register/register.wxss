/* 页面基础样式 */
page {
  height: 100%;
}

.scrollarea {
  height: 100%;
  position: relative;
}

/* 背景图样式 */
.bg-image {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 居中容器 */
.center-wrapper {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 表单容器 */
.form-container {
  width: 100%;
  max-width: 600rpx;
  background-color: rgba(255, 255, 255, 0);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0);
}

/* 表单标题 */
.form-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #89bef0;
  text-align: center;
  margin-bottom: 50rpx;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 50rpx;
}

.form-label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.form-input {
  flex: 1;
  height: 90rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 32rpx;
  background-color: #fff;
}

/* 密码显示/隐藏按钮 */
.toggle-password {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #07c160;
  font-size: 28rpx;
}

/* 错误信息样式 */
.error-message {
  color: #ff4d4f;
  font-size: 26rpx;
  margin-top: 10rpx;
  display: block;
}

/* 按钮样式 */
.primary-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #07c160;
  color: white;
  border-radius: 45rpx;
  font-size: 34rpx;
  margin-top: 60rpx;
}

/* 登录链接 */
.login-link {
  text-align: center;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #666;
}

.login-link text:last-child {
  color: #07c160;
  margin-left: 10rpx;
}