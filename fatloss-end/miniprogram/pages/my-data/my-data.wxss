/* 容器样式 */
.container {
  padding: 30rpx 0rpx 30rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  color: #333333;
}

.loading-tip {
  font-size: 28rpx;
  color: #999;
  margin-top: 100rpx;
}

/* 新增：减重进度模块样式 */
.weight-progress-module {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.module-bg {
  width: 90%;
  background: linear-gradient(to bottom, #e6f7ff, #bae7ff); /* 淡蓝色渐变背景 */
  border-radius: 24rpx;
  padding: 40rpx 20rpx 20rpx 20rpx; /* 增加顶部内边距以容纳标题 */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative; /* 为绝对定位的子元素提供参考 */
}

/* 新增：目标计划标题样式 */
.module-title {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  font-size: 36rpx; /* 改为与饮食日记相同的字体大小 */
  font-weight: bold;
  color: #333333; /* 改为与饮食日记相同的字体颜色 */
  z-index: 10;
}

/* 坚持天数和目标减重 */
.stat-container {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
}

.stat-unit {
  font-size: 28rpx;
  color: #666666;
  margin-top: 5rpx;
}

/* 大圆环样式 */
.circle-container {
  width: 240rpx;  /* 进一步减小圆环容器宽度 */
  height: 240rpx;  /* 进一步减小圆环容器高度 */
  position: relative;
  margin: 15rpx 0;  /* 保持上下外边距不变 */
}

.circle-bg {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.6);
  position: absolute;
  top: 0;
  left: 0;
}

.circle-progress {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 15rpx solid transparent;  /* 减小边框宽度 */
  transform: rotate(45deg);
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
  animation: progress 1s ease-out forwards;
}

@keyframes progress {
  from {
    border-top-color: transparent;
    border-right-color: transparent;
    transform: rotate(45deg);
  }
  to {
    border-top-color: #1890FF;
    border-right-color: #1890FF;
    transform: rotate(45deg);
  }
}

.circle-content {
  width: 80%;
  height: 80%;
  background-color: white;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 10%;
  left: 10%;
}

.circle-title {
  font-size: 28rpx;  /* 减小标题字体 */
  color: #666666;
  margin-bottom: 5rpx;  /* 减小间距 */
}

.circle-value {
  font-size: 52rpx;  /* 减小数值字体 */
  font-weight: bold;
  color: #333333;
}

.circle-unit {
  font-size: 28rpx;  /* 减小单位字体 */
  color: #666666;
  margin-top: 2rpx;  /* 减小间距 */
}

/* 体重数据卡片 */
.weight-cards {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;  /* 减少上边距 */
  padding: 0 10rpx;  /* 减少左右内边距 */
  box-sizing: border-box;
}

.weight-card {
  width: 220rpx;  /* 稍微减小卡片宽度 */
  height: 170rpx;  /* 稍微减小卡片高度 */
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.card-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
}

.current .card-value {
  color: #1890FF;
}

.target .card-value {
  color: #FA8C16;
}

/* 饮食日记模块样式 */
.diet-diary-module {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.diet-diary-bg {
  padding: 30rpx 20rpx;
}

.diary-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
  margin-bottom: 20rpx;
}

.diary-title-container {
  display: flex;
  flex-direction: column;
}

.diary-main-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.diary-sub-title {
  font-size: 24rpx;
  color: #666666;
  margin-top: 5rpx;
}

.view-all {
  font-size: 28rpx;
  color: #1890FF;
  margin-top: 10rpx;
}

.date-tabs {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 30rpx;
}

.date-tab {
  font-size: 28rpx;
  color: #666666;
  padding: 10rpx 0;
  width: 30%;
  text-align: center;
  border-bottom: 2rpx solid transparent;
}

.date-tab.active {
  color: #1890FF;
  border-bottom: 2rpx solid #1890FF;
  font-weight: bold;
}

.diet-records {
  width: 100%;
}

.diet-record-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.record-time {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.record-content {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.meal-type {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.food-details {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

.record-calorie {
  font-size: 28rpx;
  color: #FF7D00;
  margin-top: 15rpx;
  align-self: flex-end;
}

.add-record-btn {
  width: 90%;
  height: 80rpx;
  background-color: #1890FF;
  color: #ffffff;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.3);
}

/* 响应式调整 */
@media screen and (min-width: 768px) {
  .module-bg {
    width: 80%;
  }
  .diet-record-card {
    padding: 25rpx;
  }
}

/* 运动记录模块样式 */
.exercise-record-module {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.exercise-record-bg {
  padding: 30rpx 20rpx;
  grid-column: 1 / -1; /* 全宽度布局 */
}

.exercise-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
  margin-bottom: 30rpx;
}

.exercise-title-container {
  display: flex;
  flex-direction: column;
}

.exercise-main-title {
  font-size: 36rpx; /* 20px */
  font-weight: 600; /* Semibold */
  color: #4a5568; /* 深灰色 */
}

.exercise-sub-title {
  font-size: 24rpx; /* 14px */
  font-weight: 400; /* Regular */
  color: #718096; /* 中灰色 */
  margin-top: 5rpx;
}

.view-all-exercise {
  font-size: 24rpx; /* 14px */
  font-weight: 500; /* Medium */
  color: #4e7ae6; /* 主蓝色 */
  margin-top: 15rpx;
}

/* 三列网格布局 */
.exercise-types-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx; /* 列间距 */
  width: 100%;
}

/* 运动类型卡片 */
.exercise-type-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
  transition: transform 0.2s, box-shadow 0.2s;
}

.exercise-type-card:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 运动类型标题区域 */
.exercise-type-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 运动类型图标 */
.exercise-type-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 30rpx;
}

.home-workout {
  background-color: #4f46e5; /* 紫色系 */
}

.outdoor-training {
  background-color: #10b981; /* 绿色系 */
}

.gym-workout {
  background-color: #f59e0b; /* 橙色系 */
}

.exercise-type-name {
  font-size: 32rpx; /* 18px */
  font-weight: 600; /* Semibold */
  color: #2d3748; /* 深灰色 */
}

/* 运动记录列表 */
.exercise-records {
  flex: 1;
}

.exercise-record-item {
  padding: 15rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.exercise-record-item.with-divider {
  border-bottom: 1rpx solid #f0f0f0;
}

.exercise-info {
  flex: 1;
}

.exercise-name {
  font-size: 26rpx; /* 14px */
  font-weight: 500; /* Medium */
  color: #4a5568; /* 深灰色 */
  margin-bottom: 5rpx;
}

.exercise-detail {
  font-size: 22rpx; /* 12px */
  font-weight: 400; /* Regular */
  color: #718096; /* 中灰色 */
}

.exercise-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.exercise-calorie {
  font-size: 26rpx; /* 14px */
  font-weight: 600; /* Semibold */
  color: #4e7ae6; /* 主蓝色 */
  margin-bottom: 5rpx;
}

.exercise-date {
  font-size: 22rpx; /* 12px */
  font-weight: 400; /* Regular */
  color: #a0aec0; /* 浅灰色 */
}

/* 响应式设计 - 小屏幕单列布局 */
@media screen and (max-width: 767px) {
  .exercise-types-grid {
    grid-template-columns: 1fr;
  }
}

