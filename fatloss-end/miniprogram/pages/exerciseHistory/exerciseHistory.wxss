/* 容器样式 */
.container {
  padding: 30rpx 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏样式 */
.search-bar {
  margin-bottom: 30rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background-color: white;
  border-radius: 40rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

/* 记录列表样式 */
.record-list {
  width: 100%;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.no-record {
  text-align: center;
  padding: 150rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 记录卡片样式 */
.record-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.date {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.day-total {
  font-size: 26rpx;
  color: #FF7D00;
}

/* 运动项样式 */
.exercise-items {
  width: 100%;
}

.exercise-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.exercise-item:last-child {
  border-bottom: none;
}

.item-left {
  flex: 1;
}

.exercise-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.calorie {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.type {
  font-size: 22rpx;
  color: #999;
  display: block;
}

.time {
  font-size: 24rpx;
  color: #999;
}