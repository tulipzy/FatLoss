/* 页面基础样式 */
page {
  height: 100%;
}

.scrollarea {
  height: 100%;
  position: relative;
}

/* 背景图样式 */
.bg-image {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 居中容器 */
.center-container {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
}

/* 表单内容 */
.form-content {
  width: 80%;
  max-width: 600rpx;
  padding: 40rpx;
  background-color: rgba(255, 255, 255, 0);
  border-radius: 20rpx;
  position: relative;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 50rpx;
}

.form-label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.input-wrapper {
  position: relative;
}

.form-input {
  width: 100%;
  height: 90rpx;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
  font-size: 32rpx;
  background: transparent;
}

/* 密码显示/隐藏按钮 */
.toggle-password {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #07c160;
  font-size: 28rpx;
}

/* 错误信息样式 */
.error-message {
  color: #ff4d4f;
  font-size: 26rpx;
  margin-top: 10rpx;
  display: block;
}

/* 按钮样式 */
.primary-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #07c160;
  color: white;
  border-radius: 45rpx;
  font-size: 34rpx;
  margin-top: 60rpx;
}

/* 注册链接样式 */
.register-link {
  text-align: center;
  margin-top: 30rpx;
}

.register-link text {
  color: #07c160;
  font-size: 32rpx;
}

/* 忘记密码链接样式 */
.forgot-password-link {
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
}

.forgot-password-link text {
  color: #999;
  font-size: 28rpx;
  text-decoration: underline;
}
